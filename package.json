{
    "name": "etsoo-react",
    "version": "1.0.28",
    "versionAutoUpdate": true,
    "description": "ETSOO TypeScript React components NPM package",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write src/**/*.ts",
        "lint": "eslint --ext .ts,.tsx src/",
        "test": "jest"
    },
    "@comments": {
        "jest configuration help": "https://basarat.gitbook.io/typescript/intro-1/jest"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/__tests__/**/*.{ts,tsx}"
        ],
        "testEnvironment": "node",
        "transform": {
            ".+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ETSOO/etsoo-react.git"
    },
    "author": "Garry Xiao",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ETSOO/etsoo-react/issues"
    },
    "homepage": "https://github.com/ETSOO/etsoo-react#readme",
    "devDependencies": {
        "@types/jest": "^26.0.8",
        "@types/react": "^16.9.36",
        "@types/react-dom": "^16.9.8",
        "@types/react-input-mask": "^2.0.5",
        "@types/react-router-dom": "^5.1.4",
        "@types/react-window": "^1.8.2",
        "@types/react-window-infinite-loader": "^1.0.3",
        "@types/yup": "^0.29.1",
        "@typescript-eslint/eslint-plugin": "^3.7.1",
        "@typescript-eslint/parser": "^3.7.1",
        "eslint": "^7.6.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-react": "^7.20.5",
        "jest": "^26.2.2",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^2.0.5"
    },
    "dependencies": {
        "@etsoo/restclient": "^1.0.16",
        "@material-ui/core": "^4.10.2",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "^4.0.0-alpha.56",
        "@types/node": "^14.0.13",
        "history": "^5.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-input-mask": "^2.0.4",
        "react-router-dom": "^5.1.2",
        "react-window": "^1.8.5",
        "react-window-infinite-loader": "^1.0.5",
        "ts-jest": "^26.1.4",
        "typescript": "^3.9.7",
        "yup": "^0.29.1"
    }
}
