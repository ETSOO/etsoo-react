{
    "name": "etsoo-react",
    "version": "1.0.40",
    "description": "ETSOO TypeScript React components NPM package",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write src/**/*.{ts,tsx}",
        "lint": "eslint --ext .ts,.tsx src/",
        "test": "jest"
    },
    "@comments": {
        "jest configuration help": "https://basarat.gitbook.io/typescript/intro-1/jest"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/__tests__/**/*.{ts,tsx}"
        ],
        "testEnvironment": "jsdom",
        "transform": {
            ".+\\.jsx?$": "babel-jest",
            ".+\\.tsx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "/node_modules/(?!@etsoo/).+\\.js$"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ETSOO/etsoo-react.git"
    },
    "keywords": [
        "TypeScript",
        "Material-UI",
        "SmartERP"
    ],
    "author": "Garry Xiao",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ETSOO/etsoo-react/issues"
    },
    "homepage": "https://github.com/ETSOO/etsoo-react#readme",
    "devDependencies": {
        "@babel/core": "^7.13.10",
        "@babel/preset-env": "^7.13.12",
        "@types/jest": "^26.0.21",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@types/react-input-mask": "^3.0.0",
        "@types/react-router-dom": "^5.1.7",
        "@types/react-window": "^1.8.2",
        "@types/react-window-infinite-loader": "^1.0.3",
        "@types/yup": "^0.29.11",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^26.6.3",
        "eslint": "^7.22.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-react": "^7.23.0",
        "jest": "^26.6.3",
        "jest-fetch-mock": "^3.0.3",
        "node-fetch": "^2.6.1",
        "prettier": "^2.2.1",
        "react-test-renderer": "^17.0.2",
        "regenerator-runtime": "^0.13.7",
        "ts-jest": "^26.5.4"
    },
    "dependencies": {
        "@etsoo/notificationmu": "^1.0.13",
        "@etsoo/restclient": "^1.0.26",
        "@etsoo/shared": "^1.0.8",
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "@types/node": "^14.14.35",
        "history": "^5.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-draggable": "^4.4.3",
        "react-input-mask": "^2.0.4",
        "react-router-dom": "^5.2.0",
        "react-svg": "^12.1.0",
        "react-window": "^1.8.6",
        "react-window-infinite-loader": "^1.0.7",
        "typescript": "^4.2.3",
        "yup": "^0.32.9"
    }
}
